<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pawan.androidvital.fragment.Toast.ToastFragment">

    <Button
        android:id="@+id/button_short_toast"
        android:text="Short Toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_long_toast"
        android:text="Long Toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_custom_toast"
        android:text="Custom Toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
